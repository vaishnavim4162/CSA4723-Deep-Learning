from sklearn.datasets import load_iris
from sklearn.model_selection import train_test_split
from tensorflow.keras.models import Sequential
from tensorflow.keras.layers import Dense
from tensorflow.keras.optimizers import Adam
from tensorflow.keras.utils import to_categorical

# Load dataset
X, y = load_iris(return_X_y=True)
y = to_categorical(y)
X_train, X_test, y_train, y_test = train_test_split(X, y, test_size=0.3, random_state=42)

# Try different learning rates and activations
configs = [(0.01, 'relu'), (0.1, 'tanh'), (0.3, 'sigmoid')]

print("Learning_Rate | Activation | Accuracy")
for lr, act in configs:
    model = Sequential([
        Dense(8, input_dim=4, activation=act),
        Dense(6, activation=act),
        Dense(3, activation='softmax')
    ])
    model.compile(optimizer=Adam(learning_rate=lr), loss='categorical_crossentropy', metrics=['accuracy'])
    model.fit(X_train, y_train, epochs=50, verbose=0)
    acc = model.evaluate(X_test, y_test, verbose=0)[1] * 100
    print(f"{lr:^13}|{act:^11}|{acc:.2f}%")
